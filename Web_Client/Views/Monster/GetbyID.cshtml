@model DataAccess.Models.Monster

@{
    ViewData["Title"] = "Quái vật";
    <link rel="stylesheet" href="~/assets/css/info-items.css">
    <link rel="stylesheet" href="style.css">

    <style>

        .input-text {
            display: flex;
        }

            .input-text input {
                width: 96%;
            }

        .input-lable {
            width: 120px;
            height: 40px;
        }

            .input-lable label {
                height: 125px;
                margin: 0 0 0 38px;
                font-family: 'Playfair Display', serif;
                /*color: #8d8d8d;*/
                line-height: 1.7em;
                font-size: 15px;
                font-weight: lighter;
                overflow: hidden;
            }

        .input-input input {
            border: 0px;
            font-size: 1rem;
        }
    </style>
}

<div class="container">
    <div class="grid">
        <div class="pokemon-list__header">
            <div class="pokemon-list__load-more__button size-14">
                <a asp-controller="Monster" asp-action="Index"><span>Quái vật</span></a>
            </div>
            <div class="content" style="margin-top: -50px;">
                    <div class="wrapper">
                        <div class="product-img">
                            <img src="@Html.DisplayFor(model => model.LinkImage)"
                                 height="420" width="327">

                        </div>
                        <div class="product-info">
                            <div class="product-text">
                                <h1>@Html.DisplayFor(model => model.Name)</h1>
                                <h2>@Html.DisplayFor(model => model.Description)</h2>
                            
                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Máu: </label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.Health)" name="" id="">
                                    </div>
                                </div>
                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Sát thương: </label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.Damage)" name="" id="">
                                    </div>
                                </div>
                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Tốc độ di chuyển: </label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.Speed)" name="" id="">
                                    </div>
                                </div>
                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Phần thưởng (xu): </label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.CoinBonus)" name="" id="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
