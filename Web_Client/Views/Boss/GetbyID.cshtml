@model DataAccess.Models.Boss

@{
    <link rel="stylesheet" href="~/assets/css/info-items.css">
    <link rel="stylesheet" href="style.css">

    <style>

        .input-text {
            display: flex;
        }

            .input-text input {
                width: 96%;
            }

        .input-lable {
            width: 178px;
            height: 40px;
        }
        .product-img{
            margin-top: 50px;
        }

            .input-lable label {
                height: 125px;
                margin: 0 0 0 38px;
                font-family: 'Playfair Display', serif;
                /*color: #8d8d8d;*/
                line-height: 1.7em;
                font-size: 15px;
                font-weight: lighter;
                overflow: hidden;
            }

        .input-input input {
            border: 0px;
            font-size: 1rem;
        }

        #text {
            overflow:auto;
            width:300px;
            height:100px;
        }
    </style>
}

<div class="container">
    <div class="grid">
        <div class="pokemon-list__header">
            <div class="pokemon-list__load-more__button size-14">
                <span>Thông tin Boss</span>
            </div>
            <div class="content" style="margin-top: -50px;">
                    <div class="wrapper">
                        <div class="product-img">
                            <img src="@Html.DisplayFor(model => model.LinkImage)"
                                 height="420" width="327">

                        </div>
                        <div class="product-info">
                        <div style="margin-top: -30px;" class="product-text">
                                <h1>@Html.DisplayFor(model => model.Name)</h1>

                            <div id="text">
                                <h2 style="font-size: 11px; color: #565555;">@Html.DisplayFor(model => model.Description)</h2>
                                </div>

                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Máu</label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.Health)" name="" id="">
                                    </div>
                                </div>

                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Tốc độ</label>
                                    </div>

                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.Speed)" name="" id="">
                                    </div>
                                </div>

                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Phần thưởng</label>
                                    </div>
                                </div>

                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Xu</label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.CoinBonus)" name="" id="">
                                    </div>
                                </div>

                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Kinh nghiệm</label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.ExperienceBonus)" name="" id="">
                                    </div>
                                </div>

                                <div class="input-text">
                                    <div class="input-lable">
                                        <label for="">Sát thương</label>
                                    </div>
                                    <div class="input-input">
                                        <input type="text" placeholder="0" value="@Html.DisplayFor(model => model.PointSkillBonus)" name="" id="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
