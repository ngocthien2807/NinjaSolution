@using Microsoft.AspNetCore.Http;
@using Obj_Common;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model DTOs.CharacterDTOs.ViewCharacterInfo

@{
    HttpContext httpContext = HttpContextAccessor.HttpContext;
    string access = httpContext.Request.Cookies["access"];
    string refresh = httpContext.Request.Cookies["refresh"];

    <link rel="stylesheet" href="~/assets/css/info-items.css">
    var i = 0;
}

<style>
    .input-text {
        display: flex;
    }

        .input-text input {
            width: 96%;
        }

    .input-lable {
        width: 120px;
        height: 36px;
    }

        .input-lable label {
            height: 125px;
            margin: 0 0 0 38px;
            font-family: 'Playfair Display', serif;
            color: #8d8d8d;
            line-height: 1.7em;
            font-size: 15px;
            font-weight: lighter;
            overflow: hidden;
        }

    .input-input input {
        border: 0px;
        font-size: 1rem;
    }

    #test {
        overflow: auto;
        width: 300px;
        height: 100px;
    }

    .wrapper {
        margin: auto !important;
    }
</style>


<div class="grid">
    <div class="pokemon-list__header">
        <div class="pokemon-list__load-more__button size-14">
            <span style="font-size: 26px;">
                Thông tin nhân vật
            </span>
        </div>

    </div>
    <div class="pokemon-list__header">

        <div class="content">
            <div class="wrapper">
                <div class="product-img">
                    <img src="@Model.LinkImage" height="420" width="327">
                </div>
                <div class="product-info">
                    <div class="product-text">
                        <h1 style="padding-top: 36px;">Thông tin nhân vật</h1>

                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="CharacterId">ID nhân vật </label>
                            </div>
                            <div class="input-lable">
                                <p>@Model.CharacterId</p>
                                <input asp-for="CharacterId" hidden />
                            </div>

                        </div>
                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="Name">Tên nhân vật </label>
                            </div>
                            <div class="input-lable">
                                <input asp-for="Name" placeholder="Nhập tên nhân vật" required />
                            </div>

                        </div>
                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="Description">Mô tả </label>
                            </div>
                            <div class="input-lable">
                                <textarea asp-for="Description" required></textarea>
                            </div>

                        </div>

                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="Health">Máu </label>
                            </div>
                            <div class="input-lable">
                                <input asp-for="Health" placeholder="Nhập chỉ số máu nhân vật" required />
                            </div>

                        </div>

                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="Chakra">Năng lượng </label>
                            </div>
                            <div class="input-lable">
                                <input asp-for="Chakra" placeholder="Nhập chỉ số năng lượng nhân vật" required />
                            </div>

                        </div>

                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="Damage">Sát thương </label>
                            </div>
                            <div class="input-lable">
                                <input asp-for="Damage" placeholder="Nhập chỉ số sát thương nhân vật" required />
                            </div>

                        </div>

                        <div class="input-text">
                            <div class="input-lable">
                                <label asp-for="Speed">Tốc độ </label>
                            </div>
                            <div class="input-lable">
                                <input asp-for="Speed" placeholder="Nhập chỉ số tốc độ nhân vật" required />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


    @*thông tin kỹ năng*@
    @foreach (var skil in Model.Skills)
    {
        <div class="pokemon-list__header">
            <div class="content" style="margin-top: 20px;">
                <div class="wrapper skill-data">
                    <div class="product-img">
                        <img src="@skil.LinkImage" height="420" width="327">

                        <div class="product-img-item">
                            <div class="form-create_item">
                                <div class="form-create_input" style="width: 450px;">
                                    <input class="LinkImage" style="background: none; font-size: 18.5px; margin-left: 36px;"
                                           type="file" required />
                                    <input name="Skill_LinkImage" link="LinkImage" value="@skil.LinkImage" hidden />
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="product-info">
                        <div class="product-text">
                            <h1 style="padding-top: 36px;">Thông tin kỹ năng @(++i)</h1>

                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.SkillId">ID kỹ năng</label>
                                </div>
                                <div class="input-lable">
                                    <p>@skil.SkillId</p>
                                    <input asp-for="@skil.SkillId" name="Skill_SkillId" hidden />
                                </div>
                            </div>
                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.Name">Tên kỹ năng</label>
                                </div>
                                <div class="input-lable">
                                    <input asp-for="@skil.Name" name="Skill_Name" placeholder="Nhập tên kỹ năng" required />
                                </div>

                            </div>
                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.Description">Mô tả </label>
                                </div>
                                <div class="input-lable">
                                    <textarea asp-for="@skil.Description" name="Skill_Description" required></textarea>
                                </div>

                            </div>


                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.Chakra">Năng lượng </label>
                                </div>
                                <div class="input-lable">
                                    <input asp-for="@skil.Chakra" name="Skill_Chakra" placeholder="Nhập chỉ số năng lượng kỹ năng" required />
                                </div>

                            </div>

                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.Damage">Sát thương </label>
                                </div>
                                <div class="input-lable">
                                    <input asp-for="@skil.Damage" name="Skill_Damage" placeholder="Nhập chỉ số sát thương kỹ năng" required />
                                </div>

                            </div>

                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.Coin">Giá bán</label>
                                </div>
                                <div class="input-lable">
                                    <input asp-for="@skil.Coin" name="Skill_Coin" placeholder="Nhập giá bán kỹ năng " required />
                                </div>

                            </div>

                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.UpdateCoin">Giá nâng cấp</label>
                                </div>
                                <div class="input-lable">
                                    <input asp-for="@skil.UpdateCoin" name="Skill_UpdateCoin" placeholder="Nhập giá nâng cấp kỹ năng " required />
                                </div>

                            </div>

                            <div class="input-text">
                                <div class="input-lable">
                                    <label asp-for="@skil.LevelUnlock">Level mở khóa</label>
                                </div>
                                <div class="input-lable">
                                    <input asp-for="@skil.LevelUnlock" name="Skill_LevelUnlock" placeholder="Nhập level mở khóa" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn-primary btn" type="button" asp-area="Admin" asp-controller="CharacterAdmin" asp-action="Index">Quay lại</a>
<a class="btn-primary btn" type="button" asp-area="Admin" asp-controller="CharacterAdmin" asp-action="Update" asp-route-id="@Model.CharacterId">Cập nhật</a>

