@model IEnumerable<DTOs.CharacterDTOs.ViewCharacterInfo>

<style>

	.messess{
		background-color:white;
		text-align:center;
		margin: auto;
		position: fixed;
		top:0;
		right:0;
		bottom:0;
		left:0;
	}

	.modal-body{
		position:absolute;
		width:100%;
		height:100%;
		background-color: rgba(0, 0 , 0, 0.3);
		z-index:auto;

		
	}

	.modal-inner{
		margin:auto;
		background-color:white;
	}

	.modal-footer{
		width:380px;
		height:300px;
		background-color:white;
		margin: auto;
		position:relative;
		border-radius:8px;
	}

</style>

<script>
	$(document).ready(function () {

		$("#keyword").on("keyup", function () {
			var value = $(this).val().toLowerCase();
			$("#myTable tr").filter(function () {
				$(this).toggle($(this).find("td:eq(0)").text().toLowerCase().indexOf(value) > -1)
			});
		});

	});

	let $modal = $("#myModal");
	$modal.draggable({
		handle: ".modal-header",
	});
	$modal.resizable();



</script>

<div> 
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<div class="active-member">
					<input class="col-8" type="text" id="keyword" placeholder="Tìm kiếm theo tên ...">

					<button id="mybtn" type="button" class="btn btn-primary" style=" margin: 0px  0px 2px 10.8rem;"> Thêm mới </button>

				</div>


				<div class="active-member">
					<div class="table-responsive">
						<table class="table table-xs mb-0">
							<thead style="background-color: #f1f1f1;">
								<tr>
									<th>Tên</th>
									<th>Máu</th>
									<th>Năng lượng</th>
									<th>Sát thương</th>
									<th>Tốc độ</th>
									<th></th>
								</tr>
							</thead>
							<tbody id="myTable">
								@foreach (var cha in Model)
								{
									<tr>
										<td style="text-align: left; ">
											<img src="@cha.LinkImage" class=" rounded-circle mr-3" alt="">
											@cha.Name
										</td>
										<td> @cha.Health  </td>
										<td> @cha.Chakra  </td>
										<td> @cha.Damage  </td>
										<td> @cha.Speed   </td>
										<td>
											<img src="~/admin/img/edit.png" />
											<img id="deleteIcon" src="~/admin/img/delete.png" />
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>


		</div>
	</div>
</div>



